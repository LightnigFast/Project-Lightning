<Window x:Class="Project_Lightning.Windows.ProgresoDescarga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Update" 
        Height="120" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        AllowsTransparency="True"       
        WindowStyle="None"              
        Background="Transparent">
    
    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3C3C3C" BorderThickness="2">

        <StackPanel Margin="20">
            <TextBlock x:Name="TxtMensaje" Text="🔄 Downloading Update..." FontSize="16" Foreground="#E5E5E5" FontWeight="SemiBold" 
                       Margin="0,0,0,15" HorizontalAlignment="Left"/>

            <ProgressBar x:Name="ProgressBarDescarga" Height="12"  Minimum="0" Maximum="100" BorderThickness="0"
                         Background="#3C3C3C" Foreground="#00A0B0" VerticalAlignment="Center"/>

            <TextBlock x:Name="TxtProgreso" Text="0%" Foreground="#E5E5E5" HorizontalAlignment="Right" Margin="0,8,0,0"/>
            
        </StackPanel>
    </Border>
</Window>