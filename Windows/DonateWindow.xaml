Thanks a ton for supporting this project!⚡
"/>

                

            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!--BOTÓN KO-FI-->
                <Button Width="215" Height="60" HorizontalAlignment="Center" Margin="10,20,10,0"  Style="{StaticResource BotonKoFi}"
                        Grid.Row="3" Name="botonKoFi" Click="botonKoFi_Click" BorderBrush="#794bc4" Cursor="Hand">
                    
                </Button>
                
                <!--BOTON REVOLUT-->
                <Button Width="215"  Height="60" HorizontalAlignment="Center" Margin="10,20,10,0" Style="{StaticResource BotonRevolut}"
                        Grid.Row="3" Name="botonRevolut" Click="botonRevolut_Click" BorderBrush="#794bc3" Cursor="Hand">
                    
                </Button>
            </StackPanel>

        </StackPanel>
        
        
    </Border>
</Window>