      xmlns:local="clr-namespace:Project_Lightning.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1420"
      Title="panelTienda">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        
        <!--PARTE PARA ALGUN BANNER-->
        
        
