<Page x:Class="Project_Lightning.Pages.panelAjustes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_Lightning.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1280"
      Title="panelAjustes">

    <Page.Resources>
        <!--Sombra-->
        <DropShadowEffect x:Key="DropShadowEffect"
                      Color="Black"
                      BlurRadius="8"
                      ShadowDepth="2"
                      Opacity="0.5"/>

        <!--BOTON MODERNO GENERICO-->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}" 
                        CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#0078D7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!--BOTON DE INSTALACION-->
        <Style x:Key="InstallButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}" 
                        CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- NOT INSTALLED -->
                            <Trigger Property="Tag" Value="NotInstalled">
                                <Setter TargetName="PART_Border" Property="Background" Value="#3A3A3A"/>
                                <Setter Property="ToolTip" Value="Install LightningTools"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="NotInstalled"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PART_Border" Property="Background" Value="#555"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="NotInstalled"/>
                                    <Condition Property="IsPressed" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PART_Border" Property="Background" Value="#0078D7"/>
                            </MultiTrigger>

                            <!-- INSTALLED -->
                            <Trigger Property="Tag" Value="Installed">
                                <Setter TargetName="PART_Border" Property="Background" Value="#2D7D46"/>
                                <Setter Property="ToolTip" Value="Installed"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="Installed"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PART_Border" Property="Background" Value="#3FAF65"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="Installed"/>
                                    <Condition Property="IsPressed" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PART_Border" Property="Background" Value="#1E5C33"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>






        <!--BOTON DE GUARDAR-->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Padding" Value="16,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PART_Border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter 
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#1493FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO DEL SCROLLVIEW-->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="3"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Visibility="Collapsed"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#555" CornerRadius="3"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Visibility="Collapsed"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--PARA LOS TOOLTIP-->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#222222"/>
            <!-- FONDO OSCURO -->
            <Setter Property="Foreground" Value="White"/>
            <!-- TEXTO BLANCO -->
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

    </Page.Resources>


    <Grid Background="#1E1E1E">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="40" >

                <!--TITULO-->
                <TextBlock Text="⚙️ Settings" FontSize="32" FontWeight="Bold" Foreground="#E5E5E5" Margin="0,0,0,10"/>

                <!--RUTA DE STEAM-->
                <Border CornerRadius="8" Background="#2A2A2A" Padding="8" Effect="{DynamicResource DropShadowEffect}">
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Text="Steam installation path" FontSize="26" Foreground="#CFCFCF" FontWeight="SemiBold" Margin="10,0,0,5"/>
                        <TextBlock FontSize="14" Foreground="#878787" FontWeight="SemiBold" Margin="10,0,0,5"
                                   Text="Enter the path where Steam is installed here to be able to use the library"/>
                        
                        <!--PARTE PARA EL CAJON DE TEXTO Y EL BOTON-->
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtRutaSteam" Grid.Column="0" FontSize="14" Foreground="White" Background="#1E1E1E" HorizontalAlignment="Stretch"
                                         BorderThickness="1" Margin="10,0,10,0" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

                                <Button x:Name="btnBuscarSteam" Grid.Column="1" Width="40" Height="40" Background="#3A3A3A" BorderThickness="0"
                                        Cursor="Hand" ToolTip="Select folder" HorizontalAlignment="Left" Style="{StaticResource ModernButton}" Click="btnBuscarSteam_Click">
                                        <TextBlock Text=""  FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                        </Grid>
                    
                    </StackPanel>
                </Border>

                <!--BOTON GUARDAR-->
                <Button x:Name="btnGuardar" Content="💾 Save Changes" FontSize="16" Width="160" Height="36" HorizontalAlignment="Right"
                        Cursor="Hand" Margin="0,30,0,0" Style="{StaticResource PrimaryButton}" Click="btnGuardar_Click"/>



                <!--PARA INSTALAR LIGHTNINGTOOLS-->
                <Border CornerRadius="8" Name="componeneteInstalacion" Background="#2A2A2A" Padding="8" Effect="{DynamicResource DropShadowEffect}" Margin="0,30,0,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <!-- Cuando está deshabilitado -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#1A1A1A"/>
                                    <!-- Fondo más oscuro -->
                                    <Setter Property="Opacity" Value="0.7"/>
                                    <!-- Le da efecto apagado -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid>
                        <StackPanel Orientation="Vertical" >
                            <TextBlock Text="Install Lightning Tools" FontSize="26" Foreground="#CFCFCF" FontWeight="SemiBold" Margin="10,0,0,5"/>
                            <TextBlock FontSize="14" Foreground="#878787" FontWeight="SemiBold" Margin="10,0,0,5" TextWrapping="Wrap"
                                       Text="Lightning Tools its the new program that you need to play games with steam. If you have steamtools already installed, you dont need to install it"/>


                            <!--GRID PARA LOS BOTONES-->
                            <StackPanel Orientation="Horizontal">
                                <!--BOTON PARA INSTALAR LIGHTNINGTOOLS-->
                                <Button x:Name="btnInstallarLightningTools" Grid.Column="1" Width="120" Height="40" Background="#3A3A3A" BorderThickness="0" Margin="10,10,5,5" Tag="NotInstalled"
                                        Cursor="Hand" ToolTip="Install LightningTools" HorizontalAlignment="Left" Style="{StaticResource InstallButtonStyle}" Click="btnInstallarLightningTools_Click">

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Install" Name="btnInstallText" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!--BOTON PARA BORRAR TODOS LOS JUEGOS AGREGADOS CON STEAMTOOLS-->
                                <Button x:Name="btnBorrarJuegos" Grid.Column="1" Width="180" Height="40" Background="#3A3A3A" BorderThickness="0" Margin="10,10,5,5"
                                        Cursor="Hand" ToolTip="Delete all games from steamtools" HorizontalAlignment="Left" Style="{StaticResource ModernButton}" Click="btnBorrarJuegos_Click">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Viewbox Width="20" Height="20" Margin="0,0,4,0">
                                            <Canvas Width="98" Height="137">
                                                <Path Fill="White" Data="M75.6,44.8v73c0,3.4-2.8,6.2-6.2,6.2H21.3c-3.4,0-6.2-2.8-6.2-6.2v-73H75.6L75.6,44.8z M59.9,52.9v62.8h3.6V52.9H59.9  L59.9,52.9z M43.6,52.9v62.8h3.6V52.9H43.6L43.6,52.9z M27.3,52.9v62.8h3.6V52.9H27.3L27.3,52.9z M31.3,27.9v-5.2  c0-3.3,2.6-5.9,5.9-5.9h16.4c3.3,0,5.9,2.6,5.9,5.9v5.2h18.1c3.4,0,6.2,2.8,6.2,6.2v4.3H7V34c0-3.4,2.8-6.2,6.2-6.2H31.3L31.3,27.9z   M37.2,20.8c-1,0-1.8,0.8-1.8,1.8v5.2h20.1v-5.2c0-1-0.8-1.8-1.8-1.8H37.2L37.2,20.8z"/>
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock Text="Remove all games" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!--BOTON PARA DESISTALAR LIGHTNING TOOLS-->
                                <Button x:Name="btnDesinstalar" Grid.Column="1" Width="120" Height="40" Background="#3A3A3A" BorderThickness="0" Margin="10,10,5,5"
                                        Cursor="Hand" ToolTip="Unistall LightningTools" HorizontalAlignment="Left" Style="{StaticResource ModernButton}" Click="btnDesinstalar_Click">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Viewbox Width="20" Height="20" Margin="0,0,4,0">
                                            <Canvas Width="132" Height="131">
                                                <Path Fill="White" Data="M115,92.8 89.2,118.6 61.5,90.8 33.7,118.6 7.9,92.8 35.7,65 7.9,37.4 33.8,11.4 61.5,39.1 89.1,11.4 115,37.4 87.2,65 115,92.8 115,92.8 Z"/>
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock Text="Uninstall" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                            </StackPanel>


                        </StackPanel>


                        <!--OVERLAY OSCURO QUE SE PONE ENCIMA PARA DARLE EL TOQUE DE DESHABILITADO-->
                        <Rectangle Fill="#AA000000" RadiusX="8" RadiusY="8" IsHitTestVisible="False" Margin="-8">
                            <Rectangle.Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Border}}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>

                    </Grid>
                                        
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>

    
</Page>
