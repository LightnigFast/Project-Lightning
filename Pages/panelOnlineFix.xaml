<Page x:Class="Project_Lightning.Pages.panelOnlineFix"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_Lightning.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1280"
      Title="panelOnlineFix">

    <Page.Resources>
        <FontFamily x:Key="FuenteJohn">pack://application:,,,/res/fonts/#Muro Regulat</FontFamily>
        <FontFamily x:Key="FuenteJohnInclinada">pack://application:,,,/res/fonts/#Muro Slant</FontFamily>

        <!--ESTILO PARA LOS BOTONES-->
        <Style x:Key="MinimalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#6A0DAD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6A0DAD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="80"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--EFECTO PARA CUANDO EL RATON ESTE ENCIMA-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--ANIMACION DEL FONDO-->
                                            <ColorAnimation 
                                        Storyboard.TargetName="border" 
                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                        From="Transparent" To="#6A0DAD" Duration="0:0:0.3" AutoReverse="False"/>
                                            <!--ANIMACION DEL BORDE
                                    <ColorAnimation 
                                        Storyboard.TargetName="border" 
                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                        From="Purple" To="Blue" Duration="0:0:0.3" AutoReverse="False"/>
                                    -->
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>

                            <!--EFECTO PARA CUANDO EL RATON SE VA-->
                            <Trigger Property="IsMouseOver" Value="False">
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--ANIMACION DEL FONDO-->
                                            <ColorAnimation 
                                        Storyboard.TargetName="border" 
                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                        From="#6A0DAD" To="Transparent" Duration="0:0:0.3" AutoReverse="False"/>
                                            <!--ANIMACION DEL BORDE
                                    <ColorAnimation 
                                        Storyboard.TargetName="border" 
                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                        From="Blue" To="Purple" Duration="0:0:0.3" AutoReverse="False"/>
                                     -->
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--EFECTO PARA CUANDO SE PRESIONE EL BOTON-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                            
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO DEL SCROLLVIEW-->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="3"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Visibility="Collapsed"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#555" CornerRadius="3"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Visibility="Collapsed"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA LA BARRA DE BUSQUEDA-->
        <Style x:Key="DarkMinimalistSearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="0 0 0 2"/>
            <Setter Property="Padding" Value="8,0,8,2"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                    Margin="34,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock x:Name="placeholder"
                                   Text="Search..."
                                   Margin="34,0,0,0"
                                   Foreground="#777777"
                                   FontStyle="Italic"
                                   Visibility="Collapsed"
                                   VerticalAlignment="Center"/>
                                <Path Data="M15.5,14h-0.79l-0.28,-0.27C15.41,12.59 16,11.11 16,9.5 16,5.91 13.09,3 9.5,3S3,5.91 3,9.5 5.91,16 9.5,16c1.61,0 3.09,-0.59 4.23,-1.57l0.27,0.28v0.79l5,5 1.5,-1.5 -5,-5Zm-6,0C7.01,14 5,11.99 5,9.5S7.01,5 9.5,5 14,7.01 14,9.5 11.99,14 9.5,14Z"
                              Stretch="Uniform"
                              Fill="#777777"
                              Width="20"
                              Height="20"
                              Margin="8,0,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#5E5E5E"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                                <Setter TargetName="placeholder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA BOTÓN KO-FI-->
        <Style x:Key="BotonKoFi" TargetType="Button">
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="#794bc4"/>
            <Setter Property="BorderBrush" Value="#794bc4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border  CornerRadius="8" BorderThickness="0">

                            <Border.Background>
                                <!-- DEGRADADO HORIZONTAL -->
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#45BAA9" Offset="0"/>
                                    <!-- Azul -->
                                    <GradientStop Color="#BA45B4" Offset="1"/>
                                    <!-- Violeta -->
                                </LinearGradientBrush>
                            </Border.Background>



                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="https://storage.ko-fi.com/cdn/cup-border.png" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Support on Ko-fi" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--HOVER-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#794bc4"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <!--CLICK-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#794bc4"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA BOTÓN REVOLUT-->
        <Style x:Key="BotonRevolut" TargetType="Button">
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" BorderThickness="0">
                            <Border.Background>
                                <!-- DEGRADADO HORIZONTAL -->
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Black" Offset="0"/>
                                    <!-- Azul -->
                                    <GradientStop Color="#7A5AF8" Offset="1"/>
                                    <!-- Violeta -->
                                </LinearGradientBrush>
                            </Border.Background>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Viewbox Height="30" Margin="0,0,10,0">
                                    <Path Fill="White" Data="M20.9133 6.9566C20.9133 3.1208 17.7898 0 13.9503 0H2.424v3.8605h10.9782c1.7376 0 3.177 1.3651 3.2087 3.043 0.016 0.84 -0.2994 1.633 -0.8878 2.2324 -0.5886 0.5998 -1.375 0.9303 -2.2144 0.9303H9.2322a0.2756 0.2756 0 0 0 -0.2755 0.2752v3.431c0 0.0585 0.018 0.1142 0.052 0.1612L16.2646 24h5.3114l-7.2727 -10.094c3.6625 -0.1838 6.61 -3.2612 6.61 -6.9494zM6.8943 5.9229H2.424V24h4.4704z"/>
                                </Viewbox>

                                <TextBlock Text="Support on Revolut" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!--HOVER-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>

                            <!--CLICK-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent" Name="gridPrincipal">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!--GRID PARA LA CABECERA-->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!--BOTON HOME-->
            <!--
            <Button x:Name="home_button" Background="Transparent" Grid.Column="0" Style="{StaticResource MinimalButtonStyle}"
                    Click="home_click" Width="40" HorizontalAlignment="Left" Margin="10,0,20,0">
                <Image Source="/res/media/logos/originals/home.png"  Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            -->
            
            <!--TEXTO PREDEFINIDO-->
            <TextBlock Text="Select a game " FontSize="30" Foreground="White" FontFamily="{StaticResource FuenteJohnInclinada}"
                       Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0"/>
            
            <!--PARA EL BOTON DE KOFI-->
            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                <!--BOTÓN KO-FI-->
                <Button Width="215" Height="40" HorizontalAlignment="Center" Margin="10,10,10,0"  Style="{StaticResource BotonKoFi}"
                        Grid.Row="3" Name="botonKoFi" Click="botonKoFi_Click" BorderBrush="#794bc4" Cursor="Hand">

                </Button>

                <!--BOTON REVOLUT-->
                <Button Width="215"  Height="40" HorizontalAlignment="Center" Margin="10,10,10,0" Style="{StaticResource BotonRevolut}"
                        Grid.Row="3" Name="botonRevolut" Click="botonRevolut_Click" BorderBrush="#794bc3" Cursor="Hand">

                </Button>
            </StackPanel>

            <!--PARTE PARA LA BARRA DE BUSQUEDA-->
            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="20,5,10,0" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBox x:Name="txtBuscar" Width="300" Height="30" Margin="0,0,50,0" VerticalAlignment="Center" TextChanged="txtBuscar_TextChanged"
                             Style="{StaticResource DarkMinimalistSearchBox}" Cursor="Hand"/>
            </StackPanel>

        </Grid>
        
        
        <!--GRID PARA LOS JUEGOS-->
        <ScrollViewer x:Name="scrollViewerJuegos" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Grid.Row="1" Margin="0,0,0,0">
            <WrapPanel Name="panelJuegos" Width="Auto" Height="Auto" Margin="10,0,10,0" HorizontalAlignment="Center">



            </WrapPanel>
        </ScrollViewer>
        
        <!--GRID PARA LA PAGINACION-->
        <StackPanel x:Name="paginacionPanel" Grid.Row="2"
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="10"/>


    </Grid>
</Page>
