<Window x:Class="Project_Lightning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:classes="clr-namespace:Project_Lightning.Classes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usercontrols="clr-namespace:Project_Lightning.UserControls"
        xmlns:local="clr-namespace:Project_Lightning"
        mc:Ignorable="d"
        Icon="/res/media/icons/ico.ico"
        WindowStartupLocation="CenterScreen"
        Title="⚡Project Lightning⚡" Height="840" Width="1420"
        MinHeight="740" MinWidth="1060">

    <Window.Resources>
        <!--ESTILO PARA LOS BOTONES DEL PANEL LATERAL-->
        <Style x:Key="BotonLateral" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" >
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--Hover-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                            <!--Click-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--PARA EL SLIDEBAR-->
        <classes:ExpandTextConverter x:Key="ExpandTextConverter"/>

    </Window.Resources>
    
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF3B0056" Offset="1.0" />
                <GradientStop Color="#FF1F002E" Offset="0.8" />
                <GradientStop Color="#FF000000" Offset="0.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!--FONDO CON GRADIENTE-->
        <MediaElement Name="BackgroundVideo" 
                      Source="res/media/backgrounds/sunset-waves.mp4"
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Manual" 
                      IsMuted="True" 
                      Stretch="UniformToFill" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" 
                      MediaFailed="BackgroundVideo_MediaFailed"
                      MediaEnded="BackgroundVideo_MediaEnded" />

        <Border Margin="10,10,10,10" Background="#80000000" CornerRadius="15">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--CABECERA DONDE ESTARAN LOS JUEGOS Y EL BUSCADOR-->
                <usercontrols:Cabecera x:Name="Cabecera" Grid.Row="0" Grid.Column="1" Margin="0,10,0,0"/>

                <!--PAGINA DE BIENVENIDA-->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Frame x:Name="framePrincipal" Grid.Row="0" Source="/Pages/panelMenuPrincipal.xaml" NavigationUIVisibility="Hidden" Background="Transparent"/>

                    <Grid Grid.Row="1" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Created by: ♡B̷y̷D̷r̷a̷X̷x̷♡" Foreground="#FFB0B0B0" FontSize="11"
                                   FontFamily="Segoe UI" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="Version: " Foreground="#FFB0B0B0" FontSize="11" Name="txtVersion"
                                   FontFamily="Segoe UI" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    </Grid>
                    
                    
                </Grid>
                
                <!--PARTE PARA PANEL LATERAL DE NAVEGACION-->
                <Border x:Name="Sidebar" Grid.RowSpan="2" Grid.Column="0" 
                        Background="#1E1E1E" CornerRadius="8" Padding="10"
                        Width="60" HorizontalAlignment="Left">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <!--Cuando el mouse entra en la barra-->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                 To="145" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <!--Cuando el mouse sale-->
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                 To="60" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <!--CONTENIDO DE LA BARRA-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--BOTONES SUPERIORES-->
                        
                        <!--PARA EL BOTON DE INICIO-->
                        <StackPanel Orientation="Vertical" Grid.Row="0">
                            <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Left" >
                                <Button Style="{StaticResource BotonLateral}" Tag="Inicio" Width="125" Click="boton_home_presionado">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="30" Foreground="White" Margin="5,10,0,10"/>
                                        <TextBlock Text="Home" Margin="10,0,0,0" VerticalAlignment="Center"
                                                   Foreground="White"
                                                   Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>


                            <!--PARA LA BIBLIOTECA-->
                            <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Left" >
                                <Button Style="{StaticResource BotonLateral}" Width="125" Click="BibliotecaButtonClick">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="30" Foreground="White" Margin="8,10,0,10"/>
                                        <TextBlock Text="Library" Margin="10,0,0,0" VerticalAlignment="Center"
                                                   Foreground="White"
                                                   Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!--PARA PARA LOS BYPASS-->
                            <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Left" >
                                <Button Style="{StaticResource BotonLateral}" Tag="Bypass" Width="125" Click="bypassButtonClick">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="30" Foreground="White" Margin="5,10,0,10"/>
                                        <TextBlock Text="Bypass" Margin="10,0,0,0" VerticalAlignment="Center"
                                                   Foreground="White"
                                                   Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            
                            <!--PARA EL ONLINE FIX-->
                            <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Left" >
                                <Button Style="{StaticResource BotonLateral}" Tag="OnlineFix" Width="125" Click="onlineFixButtonClick">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="30" Foreground="White" Margin="5,10,0,10"/>
                                        <TextBlock Text="OnlineFix" Margin="10,0,0,0" VerticalAlignment="Center"
                                                   Foreground="White"
                                                   Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </StackPanel>

                        <!--BOTON DE AJUSTES QUE ESTA ABAJO-->
                        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Left" >
                            <Button Grid.Row="1" Style="{StaticResource BotonLateral}" Width="125" Click="AjustesButtonClick">
                                <StackPanel Orientation="Horizontal">
                                    <!--ICONO DE AJUSTES-->
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="30" Foreground="White" Margin="5,10,0,10"/>
                                    <TextBlock Text="Settings" Margin="10,0,0,0" VerticalAlignment="Center"
                                               Foreground="White"
                                               Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Border>
                
                

            </Grid>
        </Border>

        <!--Canvas para notificaciones -->
        <Canvas x:Name="NotificationCanvas"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,10,0"
            IsHitTestVisible="False"/>

    </Grid>
</Window>
