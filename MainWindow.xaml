<Window x:Class="Project_Lightning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:classes="clr-namespace:Project_Lightning.Classes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usercontrols="clr-namespace:Project_Lightning.UserControls"
        xmlns:local="clr-namespace:Project_Lightning"
        mc:Ignorable="d"
        Icon="/res/media/icons/ico.ico"
        WindowStartupLocation="CenterScreen"
        Title="⚡Project Lightning⚡" Height="760" Width="1280"
        MinHeight="740" MinWidth="1000">

    <Window.Resources>
        <!--ESTILO PARA LOS BOTONES DEL PANEL LATERAL-->
        <Style x:Key="BotonLateral" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--Hover-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                            <!--Click-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--PARA EL SLIDEBAR-->
        <classes:ExpandTextConverter x:Key="ExpandTextConverter"/>

    </Window.Resources>
    
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF3B0056" Offset="1.0" />
                <GradientStop Color="#FF1F002E" Offset="0.8" />
                <GradientStop Color="#FF000000" Offset="0.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!--FONDO CON GRADIENTE-->
        <MediaElement Name="BackgroundVideo" 
                      Source="res/media/backgrounds/sunset-waves.mp4"
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Manual" 
                      IsMuted="True" 
                      Stretch="UniformToFill" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" 
                      MediaFailed="BackgroundVideo_MediaFailed"
                      MediaEnded="BackgroundVideo_MediaEnded" />

        <Border Margin="10,10,10,10" Background="#80000000" CornerRadius="15">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--CABECERA DONDE ESTARAN LOS JUEGOS Y EL BUSCADOR-->
                <usercontrols:Cabecera x:Name="Cabecera" Grid.Row="0" Grid.Column="1" Margin="0,10,0,0"/>

                <!--PAGINA DE BIENVENIDA-->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Frame x:Name="framePrincipal" Grid.Row="0" Source="/Pages/panelMenuPrincipal.xaml" NavigationUIVisibility="Hidden" Background="Transparent"/>

                    <Grid Grid.Row="1" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Created by: ♡B̷y̷D̷r̷a̷X̷x̷♡" Foreground="#FFB0B0B0" FontSize="11"
                                   FontFamily="Segoe UI" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="Version: " Foreground="#FFB0B0B0" FontSize="11" Name="txtVersion"
                                   FontFamily="Segoe UI" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    </Grid>
                    
                    
                </Grid>
                
                <!--PARTE PARA PANEL LATERAL DE NAVEGACION-->
                <Border x:Name="Sidebar" Grid.RowSpan="2" Grid.Column="0"
                        Background="#1E1E1E" CornerRadius="8" Padding="10"
                        Width="60" HorizontalAlignment="Left"> 
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <!--Cuando el mouse entra en la barra-->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                 To="200" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <!--Cuando el mouse sale-->
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                 To="60" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <!--CONTENIDO DE LA BARRA-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--Botones superiores-->
                        <StackPanel Orientation="Vertical" Grid.Row="0">
                            <Button Style="{StaticResource BotonLateral}" Tag="Inicio">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/home.png" Width="24" Height="24"/>
                                    <TextBlock Text="Inicio" Margin="10,0,0,0"
                               Foreground="White" Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource BotonLateral}" Tag="Biblioteca">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/library.png" Width="24" Height="24"/>
                                    <TextBlock Text="Biblioteca" Margin="10,0,0,0"
                               Foreground="White" Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource BotonLateral}" Tag="Tienda">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/shop.png" Width="24" Height="24"/>
                                    <TextBlock Text="Tienda" Margin="10,0,0,0"
                               Foreground="White" Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!--Botón Ajustes (Abajo del todo)-->
                        <Button Grid.Row="1" Style="{StaticResource BotonLateral}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/settings.png" Width="24" Height="24"/>
                                <TextBlock Text="Ajustes" Margin="10,0,0,0"
                           Foreground="White" Visibility="{Binding Width, ElementName=Sidebar, Converter={StaticResource ExpandTextConverter}}"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>




            </Grid>
        </Border>
    </Grid>
</Window>
