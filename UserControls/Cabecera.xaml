<UserControl x:Class="Project_Lightning.UserControls.Cabecera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Lightning"
             xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="1280">

    <UserControl.Resources>
        <!--ESTILO PARA LOS BOTONES-->
        <Style x:Key="MinimalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#6A0DAD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6A0DAD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="80"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--EFECTO PARA CUANDO EL RATON ESTE ENCIMA-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--ANIMACION DEL FONDO-->
                                            <ColorAnimation 
                                                Storyboard.TargetName="border" 
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                From="Transparent" To="#6A0DAD" Duration="0:0:0.3" AutoReverse="False"/>    
                                            <!--ANIMACION DEL BORDE
                                            <ColorAnimation 
                                                Storyboard.TargetName="border" 
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                                From="Purple" To="Blue" Duration="0:0:0.3" AutoReverse="False"/>
                                            -->
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>

                            <!--EFECTO PARA CUANDO EL RATON SE VA-->
                            <Trigger Property="IsMouseOver" Value="False">
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--ANIMACION DEL FONDO-->
                                            <ColorAnimation 
                                                Storyboard.TargetName="border" 
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                From="#6A0DAD" To="Transparent" Duration="0:0:0.3" AutoReverse="False"/>
                                            <!--ANIMACION DEL BORDE
                                            <ColorAnimation 
                                                Storyboard.TargetName="border" 
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                                From="Blue" To="Purple" Duration="0:0:0.3" AutoReverse="False"/>
                                             -->
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--EFECTO PARA CUANDO SE PRESIONE EL BOTON-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA BOTÓN KO-FI-->
        <Style x:Key="BotonKoFi" TargetType="Button">
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="#794bc4"/>
            <Setter Property="BorderBrush" Value="#794bc4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border  CornerRadius="8" BorderThickness="0">

                            <Border.Background>
                                <!-- DEGRADADO HORIZONTAL -->
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#45BAA9" Offset="0"/>
                                    <!-- Azul -->
                                    <GradientStop Color="#BA45B4" Offset="1"/>
                                    <!-- Violeta -->
                                </LinearGradientBrush>
                            </Border.Background>



                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="https://storage.ko-fi.com/cdn/cup-border.png" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Support on Ko-fi" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--HOVER-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#794bc4"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <!--CLICK-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#794bc4"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA BOTÓN REVOLUT-->
        <Style x:Key="BotonRevolut" TargetType="Button">
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" BorderThickness="0">
                            <Border.Background>
                                <!-- DEGRADADO HORIZONTAL -->
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Black" Offset="0"/>
                                    <!-- Azul -->
                                    <GradientStop Color="#7A5AF8" Offset="1"/>
                                    <!-- Violeta -->
                                </LinearGradientBrush>
                            </Border.Background>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Viewbox Height="30" Margin="0,0,10,0">
                                    <Path Fill="White" Data="M20.9133 6.9566C20.9133 3.1208 17.7898 0 13.9503 0H2.424v3.8605h10.9782c1.7376 0 3.177 1.3651 3.2087 3.043 0.016 0.84 -0.2994 1.633 -0.8878 2.2324 -0.5886 0.5998 -1.375 0.9303 -2.2144 0.9303H9.2322a0.2756 0.2756 0 0 0 -0.2755 0.2752v3.431c0 0.0585 0.018 0.1142 0.052 0.1612L16.2646 24h5.3114l-7.2727 -10.094c3.6625 -0.1838 6.61 -3.2612 6.61 -6.9494zM6.8943 5.9229H2.424V24h4.4704z"/>
                                </Viewbox>

                                <TextBlock Text="Support on Revolut" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!--HOVER-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>

                            <!--CLICK-->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--GRID PARA LOS BOTONES LAS EMPRESAS-->
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <!--ColumnDefinition Width="60"/>-->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--BOTON HOME-->
            <!--
            <Button x:Name="home_button" Background="Transparent" Grid.Column="0" Style="{StaticResource MinimalButtonStyle}"
                    Click="home_click" Width="40">
                <Image Source="/res/media/logos/originals/home.png"  Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            -->
            
            <!--BOTON UBISOFT-->
            <Button x:Name="ubisoft_button" Background="Transparent" Grid.Column="0" Style="{StaticResource MinimalButtonStyle}"
                    Click="ubisoft_click">
                <Image Source="/res/media/logos/originals/Ubisoft_logo_white.png" Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            
            <!--BOTON EA-->
            <Button x:Name="ea_button" Background="Transparent" Grid.Column="1" Style="{StaticResource MinimalButtonStyle}"
                    Click="ea_click">
                <Image Source="/res/media/logos/originals/EA_Logo.png" Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            
            <!--BOTON ROCKSTAR-->
            <Button x:Name="rockstar_button" Background="Transparent" Grid.Column="2" Style="{StaticResource MinimalButtonStyle}"
                    Click="rockstar_click">
                <Image Source="/res/media/logos/originals/Rockstar_Games_Logo.png" Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            
            <!--BOTON DENUVO-->
            <Button x:Name="denuvo_button" Background="Transparent" Grid.Column="3" Style="{StaticResource MinimalButtonStyle}"
                    Click="denuvo_click">
                <Image Source="/res/media/logos/originals/Denuvo_logo_white.png" Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            
            <!--BOTON Play Station-->
            <Button x:Name="ps_button" Background="Transparent" Grid.Column="4" Style="{StaticResource MinimalButtonStyle}"
                    Click="playstation_click">
                <Image Source="/res/media/logos/originals/PlayStation_logo.png" Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            
            <!--BOTON PARA OTROS JUEGOS-->
            <Button x:Name="other_games_button" Background="Transparent" Grid.Column="5" Style="{StaticResource MinimalButtonStyle}"
                    Click="others_click">
                <Image Source="/res/media/logos/originals/other_games_logo.png" Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
            
        </Grid>
        
        <!--GRID PARA LAS DONACIONES-->
        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
            <!--BOTÓN KO-FI-->
            <Button Width="215" Height="60" HorizontalAlignment="Center" Margin="10,0,10,0"  Style="{StaticResource BotonKoFi}"
                    Grid.Row="3" Name="botonKoFi" Click="botonKoFi_Click" BorderBrush="#794bc4" Cursor="Hand">

            </Button>

            <!--BOTON REVOLUT-->
            <Button Width="215"  Height="60" HorizontalAlignment="Center" Margin="10,0,10,0" Style="{StaticResource BotonRevolut}"
                    Grid.Row="3" Name="botonRevolut" Click="botonRevolut_Click" BorderBrush="#794bc3" Cursor="Hand">

            </Button>
        </StackPanel>


    </Grid>
</UserControl>
